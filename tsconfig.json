{
    "compilerOptions": {
        "lib": [
            "esnext",
            "dom"
        ],
        "listEmittedFiles": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./src",
        "moduleResolution": "node",
        "target": "es2020",
        "pretty": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./src",
        "resolveJsonModule": true,
        "skipLibCheck": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}