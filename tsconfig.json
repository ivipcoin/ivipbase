{
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "compilerOptions": {
        "lib": [
            "es2020",
            "esnext",
            "dom",
            "ES5"
        ],
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "listEmittedFiles": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "pretty": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "removeComments": false,
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "."
    },
    "compileOnSave": false,
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "globals.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}