{
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "module": "es2020",
        "target": "es2020",
        "moduleResolution": "node",
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "noEmit": true,
        "listEmittedFiles": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "pretty": true,
        "noEmitOnError": true,
        "removeComments": false,
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "."
    },
    "compileOnSave": false,
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}