{
	"name": "syncmongo",
	"version": "1.0.1",
	"type": "module",
	"description": "Componentes principais compartilhados do SyncMongo, sem necessidade de instalação manual",
	"comments": {
		"browser": "As substituições de arquivo webpack/browserify foram movidas para package.json em dist/cjs e dist/esm. Veja README.md para mais informações",
		"exports": "Consulte README.md para obter mais informações sobre distribuições ESM e CommonJS exportadas e usadas"
	},
	"main": "src/index.js",
	"module": "./src/index.js",
	"private": false,
	"repository": "github:ivipcoin/syncmongo",
	"scripts": {
		"dev": "nodemon ./src/test/index.ts",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"build": "npm run build:clean && npm run build:esm && npm run build:cjs && npm run build:packages && echo Done!",
		"build:clean": "del /s /q .\\dist",
		"build:esm": "tsc -p tsconfig.json && npx tsc-esm-fix ---target='dist/esm'",
		"build:cjs": "tsc -p tsconfig-cjs.json",
		"build:packages": "bash ./create-package-files",
		"browserify": "browserify ./dist/cjs/browser.js -o ./dist/browser.js --standalone syncmongo --ignore buffer --ignore rxjs && terser ./dist/browser.js -o ./dist/browser.min.js",
		"test": "jasmine",
		"test:esm": "node spec/esm-test"
	},
	"keywords": [
		"SyncMongo",
		"mongodb",
		"db",
		"realtime",
		"database",
		"database",
		"realtime"
	],
	"author": "IVIPCOIN LTDA <desenvolvimento@ivipcoin.com> (https://ivipcoin.com)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ivipcoin/syncmongo/issues"
	},
	"homepage": "https://github.com/ivipcoin/syncmongo#readme",
	"dependencies": {
		"acebase": "^1.29.0",
		"acebase-core": "^1.27.1",
		"acebase-server": "^1.18.0",
		"dotenv": "^16.0.3",
		"ejs": "^3.1.9",
		"esm": "^3.2.25",
		"express": "^4.17.1",
		"mongodb": "^5.5.0",
		"nodemon": "^3.0.1",
		"socket.io": "^4.5.0",
		"swagger-jsdoc": "^6.1.0",
		"swagger-ui-express": "^4.3.0",
		"unidecode": "^0.1.8"
	},
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/node": "^20.3.2",
		"@types/socket.io": "^3.0.2",
		"@types/swagger-jsdoc": "^6.0.1",
		"@types/swagger-ui-express": "^4.1.3",
		"@typescript-eslint/eslint-plugin": "^5.46.1",
		"@typescript-eslint/parser": "^5.46.1",
		"eslint": "^8.20.0",
		"terser": "^5.18.2",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.2",
		"tsc-esm-fix": "^2.20.14",
		"typescript": "^5.0.4"
	},
	"optionalDependencies": {
		"rxjs": ">= 5.x <= 7.x"
	},
	"nodemonConfig": {
		"restartable": "rs",
		"ignore": [
			"dist"
		],
		"watch": [
			"src",
			"test"
		],
		"delay": 2500,
		"execMap": {
			"ts": "node --require ts-node --require esm"
		},
		"ext": "js,ts"
	}
}
